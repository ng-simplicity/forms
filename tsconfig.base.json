{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ng-simplicity/forms-bootstrap": ["libs/forms-bootstrap/src/public_api.ts"],
      "@ng-simplicity/forms-core": ["libs/forms-core/src/public_api.ts"],
      "@ng-simplicity/forms-material": ["libs/forms-material/src/public_api.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
